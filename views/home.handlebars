  <div class="container">
  <h1 id="head">Welcome to Task Manager</h1>
  <form action="" method="post" enctype="application/x-www-form-urlencoded">
     <label for="task" class="label">Enter task:</label>
     <input type="text" name="task" id="task" placeholder="Enter Task Name">
     <button type="submit" class="create">Create Task</button>
     <button type="reset" class="clear">Clear Task</button>
  </form>
  <br>
   <table>
     <tr>
       <b><th>Task</th>
       <th>Edit</th>
       <th>Delete</th></b>
     </tr>
     {{#each data}}
       <tr>
         <td> <b>{{task}}</b></td>
         <td><a href="/tasks/{{_id}}"><i class="fa-solid fa-pen-to-square"></i></a></td>
         <td>
           <form action="/tasks/{{_id}}?_method=DELETE" method="post"       enctype="application/x-www-form-urlencoded">
           <input type="hidden" name="_method" vale="DELETE">
           <button type="submit"><i class="fa-solid fa-trash"></i></button>
         </td>
       </tr>
     {{/each}}
   </table>
   </div>
